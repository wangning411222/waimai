image {
  width: 100%;
  height: 100%;
}
.d-flex {
  display: flex;
}
.flex {
  flex: 1;
}
/* 文字尺寸 */
/*文字颜色*/
/* 背景颜色 */
.input-field {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 5rpx 10rpx;
}
.input-field .u-input {
  flex: 1;
}
.hx-comment_main-box {
  display: flex;
  flex-direction: column;
}
.custom-style {
  margin: 0 auto;
  padding: 15rpx 0;
  border-radius: 200rpx;
  color: #efefef;
  width: 150rpx;
  text-align: center;
  background: linear-gradient(to right, #80d0c7, #0093e9);
}
.hx-comment {
  position: relative;
  flex: 1;
  overflow: hidden;
}
.hx-comment .hx-bb {
  margin-left: 22rpx;
  border-bottom: 1px solid #efefef;
}
.hx-comment_dividing-line15 {
  height: 30rpx;
  background: #efefef;
  width: 100%;
}
.hx-comment_dividing-line {
  height: 4rpx;
  background: #efefef;
  width: 100%;
}
.hx-comment_basic-info {
  height: 164rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}
.hx-comment_basic-info_left {
  display: flex;
  flex-direction: column;
  width: 200rpx;
}
.hx-comment_basic-info_left_top {
  font-size: 46rpx;
  margin-bottom: 4rpx;
  color: #ff9800;
}
.hx-comment_basic-info_left_bottom {
  font-size: 24rpx;
  color: #555555;
}
.hx-comment_basic-info_center {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.hx-comment_basic-info_center_item {
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.hx-comment_basic-info_center_item_left {
  color: #555555;
}
.hx-comment_basic-info_center_item_center {
  margin: 0 12rpx 0 16rpx;
  height: 0;
}
.hx-comment_basic-info_center_item_right {
  color: #ff9800;
}
.hx-comment_basic-info_right {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  border-left: 1px solid #efefef;
}
.hx-comment_basic-info_right_top {
  font-size: 52rpx;
  margin-bottom: 4rpx;
  color: #999999;
}
.hx-comment_basic-info_right_bottom {
  font-size: 24rpx;
  color: #999999;
}
.hx-comment_main-box .lists .item {
  padding: 20rpx;
  display: flex;
  font-size: 44rpx;
  color: #999;
}
.hx-comment_main-box .lists .item .icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 26rpx;
  border: 1px solid #efefef;
}
.hx-comment_main-box .lists .item .info {
  flex: 1;
  font-size: 32rpx;
  color: #000;
}
.hx-comment_main-box .lists .item .info .name-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.hx-comment_main-box .lists .item .info .name-time .name {
  font-size: 32rpx;
  color: #000;
}
.hx-comment_main-box .lists .item .info .name-time .time {
  font-size: 32rpx;
  color: #999;
}
.hx-comment_main-box .lists .item .info .stars {
  padding: 12rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.hx-comment_main-box .lists .item .info .stars text {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
}
.hx-comment_main-box .lists .item .info .stars .uni-rate {
  height: 0;
}
.hx-comment_main-box .lists .item .info .replay-button {
  display: flex;
  justify-content: flex-end;
  color: #4B7BEC;
  font-size: 28rpx;
}
.hx-comment_main-box .lists .item .info .replay-content {
  margin-top: 20rpx;
  background: whitesmoke;
  border-radius: 4px;
  padding: 10rpx;
}
.hx-comment_main-box .lists .item .info .replay-content > view:first-child {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 8rpx;
  color: #000;
}
.hx-comment_main-box .lists .item .info .replay-content > view:last-child {
  font-size: 26rpx;
  color: #666;
  line-height: 30rpx;
}
.hx-comment_main-box .lists .item .info .evaluate-content {
  color: #555555;
  font-size: 28rpx;
  text-align: left;
  padding-top: 8rpx;
}
.hx-comment_main-box .lists .item .info .evaluate-content .imgs {
  display: flex;
  flex-wrap: wrap;
  padding-top: 8rpx;
}
.hx-comment_main-box .lists .item .info .evaluate-content .imgs .imgs-box {
  width: 25%;
  padding-right: 10rpx;
  box-sizing: border-box;
}
.hx-comment_main-box .lists .item .info .evaluate-content .imgs .imgs-box image {
  border-radius: 8rpx;
}
.hx-comment_main-box .no-lists {
  padding: 40rpx 0;
  text-align: center;
  font-size: 40rpx;
  color: #666;
  display: 1;
}
.tag-box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  font-size: 18rpx;
}

