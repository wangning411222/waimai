 */
image {
  width: 100%;
  height: 100%;
}
.d-flex {
  display: flex;
}
.flex {
  flex: 1;
}
/* 文字尺寸 */
/*文字颜色*/
/* 背景颜色 */
page {
  background-color: #eeeeee;
}
.info-image {
  width: 100%;
  height: 100%;
}
.info-image image {
  width: 100%;
  height: 100%;
}
.u-col-4 {
  padding: 0 !important;
}
.page_box {
  /* padding: 0 20rpx 25rpx; */
}
.uni-card {
  margin: 0 !important;
}
.image {
  width: 210rpx;
  height: 210rpx;
}
.content-box {
  padding-bottom: 20rpx;
}
.content-box-text {
  font-size: 12px;
  line-height: 22px;
}
.footer-box {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  /* text-align: right; */
  color: #aaaaaa;
}
.footer-box__item {
  align-items: center;
  padding: 2px 0;
  font-size: 12px;
  color: #666;
}
.empty_box {
  width: 100%;
  padding-top: 60rpx;
  background: #fff;
}
.dnwmBox {
  display: flex;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
.dnwmItem {
  flex: 1;
  padding: 30rpx 30rpx 20rpx 40rpx;
}
.dnwmItem .title {
  font-size: 42rpx;
  font-weight: bold;
}
.dnwmItem .brief {
  color: #a9a7a7;
  margin: 25rpx 0;
}
.reply_box {
  display: flex;
  padding: 15rpx 24rpx;
  margin-bottom: 10rpx;
}
.reply_box .reply_user {
  width: -webkit-max-content;
  width: max-content;
  color: #36deac;
}
.reply_box .reply_con {
  flex: 1;
  color: #aaaaaa;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.uni-border-top:after {
  border-top-color: #eee !important;
}
.shop-box {
  flex: 1;
  padding-top: 30rpx;
}
.shop-box .shop-tabs {
  padding: 20rpx 20rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  flex-flow: wrap;
}
.shop-box .shop-tabs .shop-tabs-item {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  flex: 0 0 25%;
  margin-bottom: 20rpx;
}
.shop-box .shop-tabs .shop-tabs-item u-image {
  width: 80rpx;
  height: 80rpx;
}
.shop-box .shop-tabs .shop-tabs-item text {
  margin-top: 10rpx;
  color: #999;
}
.shop-box .shop-content {
  background: whitesmoke;
  padding: 20rpx 10rpx;
  display: flex;
  flex-direction: column;
}
.shop-box .shop-content .shop-content-title {
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}
.shop-box .shop-content .u-empty {
  display: 1;
}
.shop-box .shop-content .select-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}
.shop-box .shop-content .select-box u-button {
  flex: 0 0 20%;
  margin-right: 20rpx;
}
.shop-box .shop-content .shop-list {
  background: whitesmoke;
  border-radius: 4px;
  margin-top: 30rpx;
}
.shop-box .shop-content .shop-list .shop-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.shop-box .shop-content .shop-list .shop-item .item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-left {
  width: 200rpx;
  height: 150rpx;
  border: 1px solud #ccc;
  border-radius: 4px;
  border: 1px solid #ccc;
  position: relative;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-left .business {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #2f2d2d90;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  left: 0;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-left image {
  width: 100%;
  height: 100%;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-right {
  margin-left: 20rpx;
  flex: 1;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-right .item-top-right-name {
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-right .item-top-right-rate {
  margin: 5rpx 0;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-right .item-top-right-time {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-right .gray-font-20 {
  color: gray;
  font-size: 24rpx;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-right .yello-font-20 {
  color: #f7ba2a;
  font-size: 24rpx;
}
.shop-box .shop-content .shop-list .shop-item .item-top .item-top-right .margin-left-10 {
  margin-left: 10rpx;
}
.shop-box .shop-content .shop-list .shop-item .item-tag {
  margin-left: 220rpx;
  display: flex;
  flex-direction: row;
}
.shop-box .shop-content .shop-list .shop-item .item-tag u-tag {
  margin-right: 10rpx;
}
.shop-box .shop-content .shop-list .shop-item .list-height {
  height: 240rpx;
}
.shop-box .shop-content .shop-list .shop-item .list-height-0 {
  height: 0;
}
.shop-box .shop-content .shop-list .shop-item .goods_list {
  margin-top: 10rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  flex-direction: row;
}
.shop-box .shop-content .shop-list .shop-item .goods_list .goods_item {
  float: left;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  max-width: 150rpx;
}
.shop-box .shop-content .shop-list .shop-item .goods_list .goods_item .goods_item-imgbox {
  position: relative;
}
.shop-box .shop-content .shop-list .shop-item .goods_list .goods_item .goods_item-imgbox .goods_img {
  width: 150rpx;
  height: 150rpx;
}
.shop-box .shop-content .shop-list .shop-item .goods_list .goods_item .goods_item-imgbox view {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  width: 60rpx;
  height: 30rpx;
  color: #fff;
  background: #f7ba2a;
  border-radius: 3px;
  font-size: 18rpx;
  line-height: 30rpx;
  text-align: center;
}
.shop-box .shop-content .shop-list .shop-item .goods_list .goods_item .goods_item-name {
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.shop-box .shop-content .shop-list .shop-item .goods_list .goods_item .yello-font-20 {
  color: #f7ba2a;
  font-size: 24rpx;
}

