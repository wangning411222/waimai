canvas {
  height: 180px !important;
}
page {
  background-color: #f9f9f9;
}
.content_box {
  padding: 0 20rpx 25rpx;
}
.dot-box {
  position: relative;
}
.dot-box .dot {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  top: 10rpx;
  right: 10rpx;
  background: red;
}
.call_us_btn {
  font-size: 28rpx;
  opacity: 0;
  width: 100%;
  line-height: 65rpx;
  text-align: left;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.authBtn {
  font-size: 24rpx;
}
.join_btn {
  border-radius: 50rpx;
  padding: 5rpx 15rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background-color: #6ee4c1;
}
.item-menu-image {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100%;
  background-color: #eaf9f9;
  text-align: center;
}
.grid-text {
  padding-top: 10rpx;
