/* 背景颜色 */
.content {
  background: whitesmoke;
  width: 100%;
  height: 100vh;
}
.content .comment-box {
  margin: 20rpx;
  border-radius: 5px;
  background: #fff;
  width: calc(100% - 40rpx);
  height: 100%;
  padding: 20rpx;
}
.content .comment-box .comment-shop {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 30rpx;
}
.content .comment-box .comment-shop text {
  font-weight: bold;
  margin: 0 20rpx;
}
.content .comment-box .rate-box {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}
.content .comment-box .rate-box .rate-label {
  color: #fa3534;
}
.content .comment-box .u-form {
  margin-left: 30rpx;
}
.content .comment-box .u-form .u-input {
  min-height: 300rpx;
}
.content .comment-box .form-submit {
  margin-top: 40rpx;
}

