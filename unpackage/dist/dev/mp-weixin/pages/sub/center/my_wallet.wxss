.ns {
  width: 100%;
  height: 60px;
  text-align: center;
  line-height: 200rpx;
  color: white;
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(to right, #ea9518, #ff8440);
}
.top {
  margin-top: 20rpx;
}
.flexView {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.flexView .scrollView {
  width: 100%;
  height: 100%;
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  position: relative;
  padding-bottom: 116rpx;
}
.flexView .scrollView .head-read {
  background: linear-gradient(to right, #ea9518, #ff8440);
  background-color: #ff8440;
  padding-bottom: 100rpx;
}
.flexView .scrollView .head-read .flex {
  display: flex;
  align-items: center;
  padding: 50rpx;
  position: relative;
}
.flexView .scrollView .head-read .flex .read-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}
.flexView .scrollView .head-read .flex .flex-box {
  flex: 1;
  min-width: 0;
  font-size: 26rpx;
  color: #333;
}
.flexView .scrollView .head-read .flex .flex-box-text {
  margin: 10rpx 0;
  color: #f5f5f5;
  font-weight: normal;
}
.flexView .scrollView .head-read .flex .arrow {
  position: relative;
  padding-right: 30rpx;
}
.flexView .scrollView .head-read .flex .arrow ._span {
  font-size: 28rpx;
  color: white;
}
.flexView .scrollView .head-read .flex .arrow:after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #848484;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
          transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: relative;
  top: -4rpx;
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
  border-radius: 2rpx;
}
.flexView .scrollView .head-read .flex .arrow-one:after {
  border-color: white;
  margin-top: -6rpx;
}
.flexView .scrollView .white-box {
  width: 94%;
  background: white;
  border-radius: 10rpx;
  margin: -120rpx auto 20rpx;
  box-shadow: 0 6rpx 20rpx #e7e7e7;
}
.flexView .scrollView .white-box .tx {
  padding-top: 26rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-content: center;
}
.flexView .scrollView .white-box .tx-grid {
  box-sizing: border-box;
}
.flexView .scrollView .white-box .tx-grid:first-child {
  margin-left: 40rpx;
}
.flexView .scrollView .white-box .tx-grid-comm-sign {
  display: block;
  border-radius: 40rpx 0 0 40rpx;
  font-size: 26rpx;
  padding: 16rpx 44rpx;
  background: linear-gradient(to right, #fef082, #ffc551);
  background-color: #fef082;
  color: #cf4400;
}
.flexView .scrollView .white-box .tx-grid-text {
  display: block;
  color: #333;
  font-size: 26rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.flexView .scrollView .white-box .tx-grid-text .title {
  font-size: 26rpx;
  font-weight: normal;
  color: #ff6423;
}
.flexView .scrollView .white-box .tx-grid-text .money {
  font-size: 60rpx;
  color: #ff6423;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}
.flexView .scrollView .white-box .tx-grid-text .money-b {
  font-size: 28rpx;
}
.flexView .scrollView .white-box .palace {
  padding-bottom: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
}
.flexView .scrollView .white-box .palace-grid {
  flex: 1;
  position: relative;
  box-sizing: border-box;
}
.flexView .scrollView .white-box .palace-grid:not(:last-child):after {
  width: 1rpx;
  height: 80rpx;
  background: #fddece;
  content: " ";
  display: inline-block;
  position: absolute;
  top: 0;
  right: 0;
}
.flexView .scrollView .white-box .palace-grid-text {
  display: block;
  text-align: center;
  color: #333;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.flexView .scrollView .white-box .palace-grid-text-name {
  font-size: 26rpx;
  font-weight: normal;
  color: #ff8a4a;
}
.flexView .scrollView .white-box .palace-grid-text-data {
  font-size: 32rpx;
  color: #ff8a4a;
  letter-spacing: 2rpx;
  margin-bottom: 5rpx;
}
.flexView .scrollView .white-box .palace-grid-text-data-b {
  font-size: 20rpx;
}
.list-view {
  position: relative;
  width: 100%;
  overflow: hidden;
}
.list-item {
  width: 100%;
  padding: 30rpx 28rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
