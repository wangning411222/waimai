}
.source {
  margin: 12rpx 0;
}
.time {
  color: #888;
}
.money {
  font-size: 38rpx;
  font-weight: 500;
  color: #ff1e0f;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 20rpx;
}
.money text {
  color: #6ee4c1;
  margin-top: 20rpx;
  font-size: 32rpx;
}
.less {
  color: #4caf50 !important;
}
.tip {
