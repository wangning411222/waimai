/* 背景颜色 */
page {
  background: whitesmoke;
}
.page-box {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.no-lists {
  padding: 40rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-box {
  color: #ffffff;
  background: #6ee4c1;
}
.comment-list {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
.comment-list .comment-item {
  background: #fff;
  border-radius: 4px;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.comment-list .comment-item .comment-item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.comment-list .comment-item .comment-item-top .item-top-left {
  display: flex;
  flex-direction: row;
}
.comment-list .comment-item .comment-item-top .item-top-left ._img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 4rpx;
}
.comment-list .comment-item .comment-item-top .item-top-left text {
  color: #000;
  margin-left: 20rpx;
}
.comment-list .comment-item .comment-content {
  margin: 20rpx 0;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #c9c9c9b3;
}
.comment-list .comment-item .comment-content .content-rate {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
}
.comment-list .comment-item .comment-content .content-rate text {
  margin-right: 30rpx;
  color: #ccc;
}
.comment-list .comment-item .comment-content .content-img {
  display: flex;
  flex-direction: row;
}
.comment-list .comment-item .comment-content .content-img .img-item {
  width: 60rpx;
  height: 60rpx;
  margin: 10px;
  border-radius: 2px;
}
.comment-list .comment-item .comment-content .content-img .img-item ._img {
  width: 100%;
  height: 100%;
}
.comment-list .comment-item .comment-content .replay-content {
  margin-top: 20rpx;
  background: whitesmoke;
  border-radius: 4px;
  padding: 10rpx;
}
.comment-list .comment-item .comment-content .replay-content > view:first-child {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 8rpx;
  color: #000;
}
.comment-list .comment-item .comment-content .replay-content > view:last-child {
  font-size: 26rpx;
  color: #666;
  line-height: 30rpx;
}
.comment-list .comment-item .comment-bottom {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

